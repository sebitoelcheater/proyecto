<!-- Layout Principal, la que contiene los Ramos y El Boton Añadir Ramo -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >
	
	<!-- Layout que muestra los Ramos-->    

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:layout_weight="1"
        android:orientation="vertical" >
        
		<!-- A continuación hay un Layout Horizontal para Cada 
		Ramo, con su nombre y el botón para editar -->
		<!-- Todo lo que viene a continuación (en este Layout) debería ser generado automáticamente -->

	    <LinearLayout
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:orientation="horizontal" >
	        
	        <!-- Nombre del RAmo -->

	        <TextView
	            android:layout_width="0dp"
	            android:layout_height="wrap_content"
	            android:layout_weight="1"
	            android:text="@string/nombre_ramo" />

	        <!-- Boton para Editar el Ramo -->

	        <Button
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:text="Editar" />
	        
	    </LinearLayout>
	    
	     <LinearLayout
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:orientation="horizontal" >
	        
	        <!-- Nombre del RAmo -->

	        <TextView
	            android:layout_width="0dp"
	            android:layout_height="wrap_content"
	            android:layout_weight="1"
	            android:text="@string/nombre_ramo_con_otro_nombre" />

	        <!-- Boton para Editar el Ramo -->

	        <Button
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:text="Editar" />
	        
	    </LinearLayout>
	    
	     
	     
	      <ListView android:id="@android:id/list"
               android:layout_width="match_parent"
               android:layout_height="match_parent"
               android:layout_weight="1"
               android:drawSelectorOnTop="false"/>
	    
	    
	  </LinearLayout>
    
     <Button
         android:layout_width="fill_parent"
         android:layout_height="wrap_content"
         android:text="Configurar Nuevo Ramo" />

</LinearLayout>
