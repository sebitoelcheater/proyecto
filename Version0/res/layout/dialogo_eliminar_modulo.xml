<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="fill_parent"
	android:layout_height="wrap_content"
	android:orientation="horizontal">
	
	<TextView
		    android:id="@+id/diaModulo"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:layout_gravity="center|center_horizontal"
		    android:textAppearance="?android:attr/textAppearanceLarge"
		    android:text="Día   "/>

	<LinearLayout
	    xmlns:android="http://schemas.android.com/apk/res/android"
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:layout_gravity="center"
	    android:layout_weight="1"
	    android:orientation="horizontal" >

	    <LinearLayout
	        xmlns:android="http://schemas.android.com/apk/res/android"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_gravity="center|center_horizontal|right"
	        android:gravity="center"
	        android:orientation="horizontal" >

			<TextView
			    android:id="@+id/horaInicio"
			    android:layout_width="wrap_content"
			    android:layout_height="wrap_content"
			    android:layout_gravity="center"
			    android:textAppearance="?android:attr/textAppearanceLarge"
			    android:text="XX:XX"/>
	
			<TextView
				android:id="@+id/dospuntos"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:textAppearance="?android:attr/textAppearanceLarge" 
				android:text=" - "/>
			<TextView
				android:id="@+id/horaFin"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:textAppearance="?android:attr/textAppearanceLarge"
				android:text="YY:YY"/>
			
			
			
		</LinearLayout>
	</LinearLayout>
	
	
</LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" 
        android:orientation="horizontal">
        <Button
            android:id="@+id/botonCancelarEliminarModulo"
	         android:layout_width="wrap_content"
	         android:layout_weight="1"
	         android:layout_height="wrap_content"
	         android:text="Cancelar" />
        <Button
             android:id="@+id/botonAceptarEliminarModulo"            
	         android:layout_width="wrap_content"
	         android:layout_weight="1"
	         android:layout_height="wrap_content"
	         android:text="Eliminar Módulo" />
    </LinearLayout>

</LinearLayout>